	<style name="DialogTheme" parent="@android:style/Theme.Translucent" >
		<item name="android:windowTranslucentStatus">true</item>
	</style>
	
	<style name="TextView_SideOptionTitle">
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">@color/material_text_light</item>
		<item name="android:textSize">16sp</item>
		<item name="android:background">#00000000</item>
	</style>
	
	<style name="TextView_Blue">
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">@color/material_text_light_blue</item>
		<item name="android:textSize">16sp</item>
		<item name="android:background">#00000000</item>
	</style>
	
	<style name="TextView_White">
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">@color/material_prime_white</item>
		<item name="android:textSize">16sp</item>
		<item name="android:background">#00000000</item>
	</style>
	
	<style name="EditText_Blue">
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">@color/material_text_light_blue</item>
